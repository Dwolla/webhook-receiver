{
  "name": "webhook-receiver",
  "version": "1.0.0",
  "scripts": {
    "clean": "find src scripts -type f -name '*.js' -delete",
    "create-customer": "cd scripts && tsc && node create-customer.js && cd - && npm run clean",
    "deploy": "serverless deploy --verbose",
    "remove": "serverless remove",
    "lint": "tslint './**/*.ts' --exclude './node_modules/**/*.ts' --fix",
    "logs": "serverless logs --function func",
    "setup": "cd scripts && tsc && node one-time-setup.js && cd - && npm run clean"
  },
  "dependencies": {
    "@therockstorm/utils": "^3.0.3",
    "source-map-support": "^0.5.10"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.19",
    "@types/node": "^11.9.4",
    "acorn": "^6.1.0",
    "dwolla-v2": "^2.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "serverless": "^1.37.1",
    "serverless-webpack": "^5.2.0",
    "ts-loader": "^5.3.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3",
    "webpack": "^4.29.3",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint --fix"
    ],
    "*.{js,ts,json,yml,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
